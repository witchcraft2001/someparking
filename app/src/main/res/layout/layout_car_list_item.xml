<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginVertical="@dimen/small_size"
    android:layout_marginHorizontal="@dimen/medium_size"
    android:background="@drawable/gray_semirounded_button">

    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/medium_size"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@color/text_gray"
        android:textAppearance="@style/TextAppearance.BaseTheme.Caption14Regular"
        android:layout_marginTop="@dimen/small_size"
        app:layout_constraintBottom_toTopOf="@id/tv_number"
        app:layout_constraintEnd_toStartOf="@+id/button_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nissan Leaf" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/medium_size"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.BaseTheme.Body16Medium"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/small_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand"
        tools:text="A111AA777" />

    <ImageButton
        android:id="@+id/button_edit"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginHorizontal="@dimen/medium_size"
        android:background="@drawable/white_60_semirounded_button"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>