<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Widget.BaseTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.BaseTheme.Body16Medium</item>
        <item name="android:textColor">@color/contained_main_btn_text_selector</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">@dimen/very_small_size</item>
        <item name="android:paddingBottom">@dimen/very_small_size</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@null</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="elevation">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">@dimen/small_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/contained_main_btn_text_selector</item>
        <item name="rippleColor">@color/ripple_btn_selector</item>
        <item name="backgroundTint">@color/contained_main_btn_bg_selector</item>
        <item name="shapeAppearance">@style/ShapeAppearance.BaseTheme.LargeComponent</item>

        <item name="android:height">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:minWidth">300dp</item>

        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">14sp</item>

        <item name="android:scrollbars">none</item>
        <!-- убрать тень вокруг кнопки -->
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Base.Widget.BaseTheme.Button.Contained">
        <item name="strokeColor">@null</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Base.Widget.BaseTheme.Button.Contained.Main">
        <item name="android:textColor">@color/contained_main_btn_text_selector</item>
        <item name="iconTint">@color/contained_main_btn_text_selector</item>
        <item name="backgroundTint">@color/contained_main_btn_bg_selector</item>
    </style>

    <style name="Widget.BaseTheme.Button.Contained.Main.Big" parent="Base.Widget.BaseTheme.Button.Contained.Main">
        <item name="android:height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:textAppearance">@style/TextAppearance.BaseTheme.Body16Medium</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.BaseTheme.LargeComponent</item>

        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">14sp</item>
    </style>

    <style name="AppTheme.GoldSemiRoundButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/gold_semirounded_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="AppTheme.GoldIconButton" parent="@style/AppTheme.GoldSemiRoundButton">
        <item name="android:height">42dp</item>
        <item name="android:width">42dp</item>
    </style>

    <style name="AppTheme.TransparentIconButton" parent="@style/AppTheme.GoldSemiRoundButton">
        <item name="android:height">42dp</item>
        <item name="android:width">42dp</item>
        <item name="android:background">@drawable/white_30_semirounded_button</item>
    </style>

</resources>