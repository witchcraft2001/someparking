<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ShapeAppearance.BaseTheme" parent="">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.BaseTheme.LargeComponent">
        <item name="cornerSize">28dp</item>
    </style>

    <style name="ShapeAppearance.BaseTheme.MediumComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.BaseTheme.SmallComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.BaseTheme.TinyComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.BaseTheme.CircleComponent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Status.SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_red</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.Status" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/bg_page_primary</item>
        <item name="android:windowLightStatusBar">@bool/is_light</item>

        <!-- Primary brand color. -->
        <item name="colorAccent">@color/content_accent_brand</item>
        <item name="colorPrimary">@color/content_accent_brand</item>
        <item name="colorPrimaryDark">@color/bg_surface_primary</item>
        <item name="colorError">@color/content_warning_highcontrast</item>
        <item name="colorPrimaryVariant">?attr/colorPrimaryDark</item>
        <item name="colorSecondary">@color/content_accent_brand</item>
        <item name="colorSecondaryVariant">@color/content_accent_brand</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/Widget.BaseTheme.EditText</item>
        <item name="editTextBackground">@drawable/bg_edittext</item>

        <item name="materialButtonStyle">@style/Widget.BaseTheme.Button.Contained.Main.Big</item>

    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>